{
  "openapi": "3.0.1",
  "info": {
    "title": "Quickli",
    "description": "Quickli Integration",
    "license": {
      "name": "MIT"
    },
    "version": "1.0.0"
  },
  "security": [
    {
      "ApiKeyAuth": []
    }
